{
  "name": "email-sending-microservice",
  "version": "1.0.0",
  "description": "Microsserviço de envio de email",
  "main": "dist/server.js",
  "repository": "https://github.com/JPedro109/email-sending-microservice.git",
  "author": "João Pedro <joaopedromoraesnsilva@gmail.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "husky install",
    "test": "jest --passWithNoTests --detectOpenHandles --silent",
    "test:coverage": "yarn test --coverage",
    "test:staged": "yarn test --findRelatedTests",
    "test:watch": "yarn test --watchAll",
    "test:unit": "yarn test -c jest-unit-config.js",
    "test:integration": "yarn test -c jest-integration-config.js",
    "test:unit:watch": "yarn test --watchAll -c jest-unit-config.js",
    "test:integration:watch": "yarn test --watchAll -c jest-integration-config.js",
    "test:verbose": "jest --passWithNoTests --detectOpenHandles",
    "test:watch:verbose": "yarn test:verbose --watchAll",
    "test:unit:verbose": "yarn test:verbose -c jest-unit-config.js",
    "test:integration:verbose": "yarn test:verbose -c jest-integration-config.js",
    "test:unit:watch:verbose": "yarn test:verbose --watchAll -c jest-unit-config.js",
    "test:integration:watch:verbose": "yarn test:verbose --watchAll -c jest-integration-config.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/amqplib": "^0.10.1",
    "@types/jest": "^29.5.1",
    "@types/nodemailer": "^6.4.8",
    "@types/nodemailer-express-handlebars": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "dotenv": "^16.0.3",
    "express-handlebars": "^7.0.7",
    "nodemailer": "^6.9.2",
    "nodemailer-express-handlebars": "^6.1.0"
  }
}
